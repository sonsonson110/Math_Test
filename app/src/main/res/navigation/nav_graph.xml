<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/start_fragment">

    <fragment
        android:id="@+id/start_fragment"
        android:name="com.example.pson.smarttest.ui.game.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_start_fragment_to_game_fragment"
            app:destination="@id/game_fragment" />
        <action
            android:id="@+id/action_start_fragment_to_score_board"
            app:destination="@id/score_Board" />
    </fragment>

    <fragment
        android:id="@+id/game_fragment"
        android:name="com.example.pson.smarttest.ui.game.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game"/>
    <fragment
        android:id="@+id/score_Board"
        android:name="com.example.pson.smarttest.ScoreBoard"
        android:label="fragment_score_board"
        tools:layout="@layout/fragment_score_board" />
</navigation>